html,body
	font-family ff-main
	width 100%
	box-sizing border-box
	background-color #f2f2f2

.wrapper-content
	width 320px
	margin 0 auto
	box-sizing border-box
	box-shadow: 0 6px 6px 6px rgba(0,0,0,.1);

	@media screen and (min-width: 768px)
		width 768px

	@media screen and (min-width: 1150px)
		width 1150px




