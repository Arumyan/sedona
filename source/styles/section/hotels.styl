.hotels
	text-align center
	padding-bottom 50px
.hotels-title
	font-size 21px
	font-family ff-bold
	text-transform uppercase

.hotels-descr
	font-size 14px
	line-height 24px
	color #333
	text-transform uppercase
	box-sizing border-box
	padding 0 15px 30px

.hotels-btn
	text-transform uppercase
	font-size 21px
	font-family ff-bold
	background main-color
	color #fff
	display block
	width 100%
	padding 18px 0
	text-decoration none
	transition background 0.3s
	&:active
		background main-black-color
	&:hover
		background main-light-color
