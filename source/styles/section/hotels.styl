
.hotels-wrap
	box-sizing border-box
	padding 25px 15px
	background-color #fff
	text-align center

.hotels-title
	font-size 21px
	font-family ff-bold
	text-transform uppercase
	margin 0
	padding 10px 0

.hotels-descr
	font-size 14px
	line-height 24px
	color #333
	text-transform uppercase
	box-sizing border-box
	margin 0
	padding 0 15px 30px

.hotels-btn
	text-transform uppercase
	font-size 21px
	font-family ff-bold
	background main-color
	color #fff
	display block
	width 100%
	padding 18px 0
	text-decoration none
	transition background 0.3s
	&:active
		background main-black-color
	&:hover
		background main-light-color

@media screen and (min-width: 768px)

	.hotels-title
		font-size 30px
		padding 50px 15px

	.hotels-descr
		max-width 450px
		display block
		margin 0 auto
		padding-bottom 40px

	.hotels-btn
		max-width 450px
		display block
		margin 0 auto


